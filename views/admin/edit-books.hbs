<style>
     .dark{
           background-color: rgba(0, 0, 0, 0.702);
max-height: 100%;
    width: 100%; 
   padding-left: 0px;
  
    }
    
    #contents{
         color: #fff;
    }
    .container{
        padding-top: 100px;
    }
</style>
  <section>
    <div class="dark">
         <div class="container">
          <div class="row">
              <div class="col-md-6">
                  <h2 id="contents" class="text-center">Edit Books</h2><br>
                  <form method="POST" action="/admin/edit-books/{{books._id}}" enctype="multipart/form-data">
                   <table>
                       <tr><label id="contents" for="">Book Name</label></th></tr><br>
                       <tr><input type="text" style="width: 250px;" name="Name" class="form-contrrol" value="{{books.Name}}"></tr><br>

                       <tr><label id="contents" for="">Author Name</label></th></tr><br>
                       <tr><input type="text" style="width: 250px;" name="author" class="form-contrrol" value="{{books.author}}"></tr><br>

                        <tr><label id="contents" for="">Description</label></tr><br>
                       <tr><textarea name="Description" id="" cols="23" rows="6">{{books.Description}}</textarea></tr><br>

                     <img src="/product-images/{{books.file}}" style="width: 100px; height:auto;" id="imgView"></img><br>
                        <tr><label id="contents" for="">Add Image</label></th></tr><br>
                        
                       <tr><input type="file" name="image" class="form-contrrol" onchange="viewImage(event)"></tr><br><br>
                        <tr> <button type="submit" class="btn btn-success">Submit</button></tr>
                   </table>
                  </form>
              </div>
          </div>
      </div>
    </div>
     
  </section>
     <script>
         function viewImage(event){
             document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
         }
     </script>