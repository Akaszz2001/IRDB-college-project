


<head>
  <style>
    .dark {
    background-color: rgba(0, 0, 0, 0.82);
    max-height: 100%;
    width: 100%;
 }

      .container{
          padding-top: 100px;
         background-color: rgb(0, 0, 0)
         
      }
      #contents{
        color: #fff;
      }
      #updateBtn{
        background-color: #f5c518e3;
      }
      #deleteBtn{
        background-color: #f8e9b6e3;
      }
      #heading{
  text-align: center;
  color: #fff;
  font-size: 75px;
}
  </style>
</head>
<div class="dark">
  <div class="container">
  
  <table class="table mt-5">
    <thead>
      <p id="heading">Movies</p>
      <tr>
        <th scope="col" id="contents" >No</th>
        <th scope="col" id="contents">Movie</th>
        <th scope="col" id="contents">Description</th>
        <th scope="col" id="contents">Image</th>
      </tr>
    </thead>

  
      <tbody>
        {{#each products}}
        <tr>
          <th id="contents" scope="row">{{@index}}</th>
          <td id="contents">{{this.Name}}</td>
          <td id="contents">{{this.Description}}</td>
          <td><img style="width: 50px; height: 50px;" src="/product-images/{{this.file}}" alt=""></img></td>
          <td><a href="/admin/edit-movie/{{this._id}}" id="updateBtn" class="btn btn-primary">Update</a>
            <a href="/admin/delete-product/{{this._id}}" id="deleteBtn" class="btn btn-danger"
              onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
        </section>
      </tbody>

</div>
</div>
