<link rel="stylesheet" href="/stylesheets/view-books.css">
<div class="dark">
    <div class="container">
       
        <table class="table mt-5">
  <thead>
    <tr>
      <th  id="contents" scope="col">No</th>
      <th  id="contents" scope="col">Name</th>
       <th scope="col"  id="contents">Author</th>
      <th scope="col"  id="contents">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
      
     
  <tbody>
      {{#each books}}
    <tr>
      <th  scope="row"  id="contents">{{@index}}</th>
      <td  id="contents">{{this.Name}}</td>
      <td  id="contents">{{this.author}}</td> 
      <td  id="contents">{{this.Description}}</td> 
      <td><img style="width: 50px; height: 50px;" src="/book-images/{{this.file}}"  alt=""></img></td>
      <td><a href="/admin/edit-books/{{this._id}}" id="updateBtn" class="btn btn-primary">Update</a>
          <a href="/admin/delete-book/{{this._id}}" id="deleteBtn" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
</section>
  </tbody>
</table>
    </div> 
</div>
  