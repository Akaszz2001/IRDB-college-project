
    <div class="container">
       <div class="row mt-4 ">
            
             <a href="/admin/add-product" class="btn btn-success ml-auto ">Add Movie</a>
       </div>
        <div class="row mt-4 ">
          <a href="/admin/Add-book" class="btn btn-success ml-auto ">Add Book</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
       <th scope="col">Author</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
      
     
  <tbody>
      {{#each books}}
    <tr>
      <th  scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.author}}</td> 
      <td>{{this.Description}}</td> 
      <td><img style="width: 50px; height: 50px;" src="/product-images/{{this.file}}"  alt=""></img></td>
      <td><a href="/admin/edit-books/{{this._id}}" class="btn btn-primary">Update</a>
          <a href="/admin/delete-book/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
</section>
  </tbody>
</table>
