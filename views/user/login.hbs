<div class="dark">
    <center>
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="container mt-5 pl-5">
                    <h2 class="heading">Login</h2>
                    <form action="/login" name="login" method="POST">
                        <input type="email" class="email" name="Email" id="Email" placeholder="Enter email"><br>
                        <input type="password" class="password" name="Password" id="Password"
                            placeholder="Enter password"><br>
                            {{#if loginErr}}
                        <div class="error">
                            <p style="color: red;">{{loginErr}}</p>
                        </div>
                        {{/if}}
                        <input type="submit" value="Continue" onclick="check()" class="Continue">
                        <br> <a href="/signup" class="content">Create a new account ?</a>
                        
                    </form>
                </div>
            </div>
        </div>
    </center>

</div>